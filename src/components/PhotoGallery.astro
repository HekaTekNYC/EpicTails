---
import { galleryImageData } from '../data/GalleryData.ts'
---

<section id="gallery-section">
	<div class="gallery-container">
		<div class="gallery-heading">
			<p class="eyebrow-text">Gallery</p>
			<h2>Our <span>Photo Gallery</span></h2>
			<div class="header-underline"></div>
		</div>

		<div class="gallery-grid">
			{
				galleryImageData.map(({ webp, png, alt }, i) => (
					<div class="gallery-item">
						<picture>
							<source srcset={webp} type="image/webp" />
							<img src={png} alt={alt || `Gallery image ${i + 1}`} decoding="async"/>
						</picture>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.gallery-container {
		max-width: 1300px;
		width: 100%;
	}

	.gallery-heading {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
	}

	.gallery-heading h2 {
		margin-bottom: 1rem;
	}

	.gallery-heading h2 span {
		color: var(--secondary-darkest);
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.25rem;
		width: 100%;
	}

	/* GALLERY ITEM + HOVER EFFECT */
	.gallery-item {
		aspect-ratio: 1 / 1;
		height: 100%;
		overflow: hidden;
		border-radius: 12px;
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
	}

	.gallery-item:hover {
		transform: scale(1.03);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		aspect-ratio: 1 / 1;
		object-fit: cover;

		transition: transform 0.3s ease;
	}
	.gallery-grid .gallery-item:nth-child(n + 7) {
		display: none;
	}

	.gallery-item:hover img {
		transform: scale(1.05);
	}

	@media (min-width: 1170px) {
		.gallery-grid .gallery-item:nth-child(n + 7) {
			display: block;
		}
	}
</style>
