---
import Button from './Button.astro'
---

<section id="hero-section">
	<div class="hero-container">
		<div class="hero-left">
			<div class="hero-left-container">
				<picture>
					<source srcset="/images/russian-blue.webp" type="image/webp" />
					<source srcset="/images/russian-blue.png" type="image/png" />
					<img
						src="/images/russian-blue.webp"
						alt="russian blue cat with green eyes sitting"
						class="hero-cat"
						height="300"
						width="200"
						decoding="async"
					/>
				</picture>
				<picture>
					<source srcset="/images/golden-lab.webp" type="image/webp" />
					<source srcset="/images/golden-lab.png" type="image/png" />
					<img
						src="/images/golden-lab.png"
						alt="golden labrador retriever sitting looking happy"
						class="hero-lab"
						height="300"
						width="480"
						decoding="async"
					/>
				</picture>
				<div class="hero-left-blobs">
					<img
						src="/icons/paw-prints-hero.svg"
						alt="four paw prints"
						class="hero-paws"
						height="100"
						width="76.3"
					/>
					<div class="blob-left">
						<img
							src="/images/hero-blob-1.svg"
							alt="pastel pink blob"
							height="100"
							width="97"
							decoding="async"
						/>
					</div>
					<div class="blob-left-2">
						<img
							src="/images/hero-blob-2.svg"
							alt="light blue blob"
							height="142"
							width="165"
							decoding="async"
						/>
					</div>
				</div>
			</div>
		</div>
		<div class="hero-center">
			<div class="hero-header">
				<p class="eyebrow-text">Pet Sitting & Dog Walking</p>
				<h1>Caring for <span class="focus-font">Your Pets</span> Like They're Our Own</h1>
				<p class="hero-p">
					Providing compassionate and attentive pet sitting services that prioritize your pet's
					comfort and well-being, because we treat them like family.
				</p>
				<Button href="#" size="lg" style="secondary" class="booking-btn">Book Now</Button>
			</div>
		</div>
		<div class="hero-right">
			<img
				src="/images/dog.png"
				alt="dog sitting looking happy"
				height="400"
				width="246"
				class="hero-dog"
			/>
			<div class="hero-right-blobs">
				<div class="blob-right">
					<img src="/images/hero-blob-3.svg" height="300" width="273" alt="light blue blob" />
				</div>
				<div class="blob-right-2">
					<img src="/images/hero-blob-4.svg" height="242" width="300" alt="light blue blob" />
				</div>
				<img
					src="/icons/paw-prints-8.svg"
					alt="light grey colored paw prints"
					class="hero-paws-right"
					height="200"
					width="200"
				/>
			</div>
		</div>
	</div>
</section>

<style>
	.hero-container {
		display: grid;
		grid-template-columns: 1fr;
		align-items: center;
		width: 100%;
		max-width: 1200px;
	}

	.hero-left {
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 40px;
		width: 100%;
		z-index: 2;
		order: 1;
	}

	.hero-left-container {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		height: fit-content;
		width: fit-content;
	}

	.hero-left-blobs {
		position: relative;
		height: 300px;
		width: 300px;
		z-index: 1;
	}

	.blob-left {
		position: absolute;
		bottom: -55px;
		right: 15px;
		height: 100%;
		width: auto;
		transform: rotate(-25deg);
		z-index: 6;
	}

	.blob-left img {
		height: 285px;
		width: auto;
	}
	.blob-left-2 {
		position: absolute;
		top: 0px;
		left: -45px;
		height: 100%;
		width: auto;
		transform: scaleX(-1) rotate(130deg);
		z-index: -1;
	}

	.blob-left-2 img {
		height: 325px;
		width: auto;
	}

	.hero-paws {
		position: absolute;
		top: -75px;
		left: 40px;
		height: 90px;
		width: auto;
		transform: rotate(-95deg);
		z-index: 3;
	}

	.hero-cat {
		position: absolute;
		height: 220px;
		width: auto;
		bottom: -5px;
		left: -5px;
		z-index: 5;
	}

	.hero-lab {
		position: absolute;
		height: 320px;
		width: auto;
		bottom: -2px;
		right: -4px;
		z-index: 4;
	}

	.hero-header {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		height: 100%;
	}

	.hero-p {
		text-align: center;
		padding-bottom: 15px;
	}

	.hero-header {
		margin-bottom: 15px;
	}

	.hero-header h1 {
		text-align: center;
		padding-bottom: 15px;
	}

	.hero-center {
		order: 2;
	}

	.hero-right {
		display: none;
	}
	.hero-points {
		display: flex;
	}
	@media (min-width: 768px) and (max-width: 819px) and (orientation: portrait) {
		.hero-left {
			margin-bottom: 60px;
		}

		.blob-left {
			right: 20px;
			transform: rotate(-20deg);
		}
		.blob-left img {
			width: 330px;
		}

		.blob-left-2 {
			left: -100px;
		}
		.blob-left-2 img {
			height: 370px;
		}
		.hero-paws {
			top: -100px;
			left: 10px;
		}
	}

	@media (min-width: 820px) and (max-width: 1023px) and (orientation: portrait) {
		.hero-left {
			margin-top: 80px;
		}
	}
	@media (min-width: 1024px) and (max-width: 1080px) and (orientation: portrait) {
		.hero-left {
			padding-top: 40px;
		}
		.hero-header {
			padding-top: 30px;
		}
	}

	@media (min-width: 1100px) {
		.hero-container {
			display: grid;
			grid-template-columns: 30% 40% 30%;
			gap: 1rem;
			padding: 60px 0;
		}

		.hero-left,
		.hero-center,
		.hero-right {
			order: unset;
			width: 100%;
			margin: 0;
		}

		.hero-header {
			margin: 0;
		}

		.blob-left {
			bottom: -55px;
			left: 0px;
			transform: rotate(-25deg);
		}

		.blob-left img {
			height: 285px;
		}

		.blob-left-2 {
			top: -20px;
			left: -40px;
			transform: scaleX(1) rotate(80deg);
		}

		.blob-left-2 img {
			height: 325px;
		}

		.hero-cat {
			left: -10px;
		}

		.hero-paws {
			top: -110px;
			left: 0;
			height: 110px;
			transform: rotate(-90deg);
		}

		.hero-right {
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;
			z-index: 2;
		}

		.hero-right-blobs {
			position: relative;
			height: 300px;
			width: 300px;
			z-index: 1;
		}

		.blob-right {
			position: absolute;
			top: 55px;
			right: 5px;
			width: auto;
			transform: rotate(30deg);
			z-index: 6;
		}

		.blob-right img {
			height: 270px;
			width: auto;
		}

		.blob-right-2 {
			position: absolute;
			top: 0px;
			right: -60px;
			width: auto;
			transform: rotate(300deg);
			z-index: -1;
		}

		.blob-right-2 img {
			height: 300px;
			width: auto;
		}
		.hero-paws-right {
			position: absolute;
			height: 300px;
			width: auto;
			right: -140px;
			bottom: -190px;
			transform: scaleX(-1) rotate(-67deg);
			z-index: -2;
		}

		.hero-dog {
			position: absolute;
			height: 350px;
			width: auto;
			bottom: -10px;
			right: 60px;
			z-index: 4;
		}
	}

	@media (min-width: 1200px) {
		.hero-container {
			grid-template-columns: 25% 50% 25%;
		}

		.hero-center {
			padding: 0 40px;
		}
	}
</style>
