---
import Button from './Button.astro'
---

<footer class="footer">
	<div class="footer-container">
		<div class="footer-column">
			<div class="footer-mission">
				<a href="/" class="logo" aria-label="Home">
					<picture>
						<source srcset="/images/epic-lt.webp" type="image/webp" />
						<source srcset="/images/epic-lt.png" type="image/png" />
						<img src="/images/epic-lt.png" alt="Epic Tails logo" height="50" width="100" />
					</picture>
				</a>
				<p>
					Caring, reliable dog walking and pet sitting tailored to your pet’s needs — because they
					deserve the best.
				</p>
			</div>

			<ul class="footer-contact">
				<li>
					<img src="/icons/location.svg" alt="Location Pin Icon in Pink" width="18" height="18" />
					<p>42 Wythe Ave, Brooklyn, NY 11249</p>
				</li>
				<li>
					<img src="/icons/phone-pnk.svg" alt="Phone Ringing Icon in Pink" width="18" height="18" />
					<p>917-555-4444</p>
				</li>
				<li>
					<img src="/icons/mail-pnk.svg" alt="Envelope Icon in Pink" width="18" height="14" />
					<p>hello@epictails.com</p>
				</li>
			</ul>
		</div>
		<div class="footer-column">
			<h3>Quick Links</h3>
			<ul>
				<li><a href="#hero-section">Home</a></li>
				<li><a href="#about-section">About</a></li>
				<li><a href="#services-section">Services</a></li>
				<li><a href="#contact-section">Contact</a></li>
				<li><a href="#pricing-section">Pricing</a></li>
			</ul>
		</div>

		<div class="footer-column">
			<h3>Our Services</h3>
			<ul>
				<li><a href="#services-section">Dog Walking</a></li>
				<li><a href="#services-section">Pet Sitting</a></li>
				<li><a href="#services-section">Cat & Critter Care</a></li>
				<li><a href="#services-section">Puppy Visits</a></li>
				<li><a href="#services-section">Overnight Stays</a></li>
				<li><a href="#services-section">Pet Transportation</a></li>
			</ul>
		</div>
		<div class="footer-column">
			<h3>Newsletter</h3>
			<p>Subscribe to our newsletter for funsies.</p>
			<input type="email" class="footer-input" placeholder="Email" />
			<Button href="#" size="lg" style="secondary" rel="noopener" target="_blank" class="about-btn"
				>Sign Up</Button
			>
			<div>
				<ul class="footer-socials">
					<li>
						<a href="#" aria-label="Facebook" rel="noopener" target="_blank">
							<img
								src="/icons/facebook-blue.svg"
								alt="Facebook icon"
								height="40"
								width="40"
								decoding="async"
								loading="lazy"
							/>
						</a>
					</li>
					<li>
						<a href="#" aria-label="Twitter" rel="noopener" target="_blank">
							<img
								src="/icons/x-blue.svg"
								alt="Twitter icon"
								height="40"
								width="40"
								decoding="async"
								loading="lazy"
							/>
						</a>
					</li>
					<li>
						<a href="#" aria-label="Instagram" rel="noopener" target="_blank">
							<img
								src="/icons/instagram-blue.svg"
								alt="Instagram icon"
								height="40"
								width="40"
								decoding="async"
								loading="lazy"
							/>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="copyright">
		<span>
			Website Developed by
			<a href="https://hekateknyc.com/" target="_blank" class="hekatek-link"> Hekatek </a>
		</span>
		<span class="copyright">© Copyright 2025</span>
	</div>
</footer>

<style>
	.footer {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		background-color: var(--dark-gray);
		padding: 40px 30px;
	}

	.footer-container {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
		color: var(--white);
		max-width: 1300px;
	}

	.footer-container h3 {
		color: var(--secondary-darkest);
		padding-bottom: 10px;
	}

	.footer-container li {
		padding: 10px 0;
	}

	.footer-contact li {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.footer-contact li p {
		padding-left: 5px;
		margin: 0;
	}

	.footer-column {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding-bottom: 15px;
	}

	.footer-input {
		padding: 0.75rem 0.9rem;
		font-size: 1rem;
		border: 1px solid #ccc;
		border-radius: 8px;
		width: 100%;
		max-width: 300px;
		margin: 15px 0 10px;
	}

	.footer-socials {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		margin: 0 5px;
	}

	.footer-socials img {
		border: 1px solid var(--primary-darkest);
		border-radius: 50%;
		padding: 5px;
		margin: 0 6px;
		cursor: pointer;
	}

	.copyright {
		width: 70%;
		font-size: 0.875rem;
		color: var(--white);
	}

	@media (min-width: 567px) {
		.footer {
			padding: 40px;
		}
	}
	@media (min-width: 768px) {
		.footer-container {
			grid-template-columns: 1fr 1fr;
			column-gap: 2rem;
		}

		.footer-column {
			display: flex;
			align-items: start;
			justify-content: start;
			text-align: start;
		}

		.footer-contact {
			padding-top: 7px;
		}

		.footer-contact li {
			justify-content: start;
			padding: 0 0 7px;
		}
	}

	@media (min-width: 996px) {
		.footer {
			padding: 40px 80px;
		}

		.footer-container {
			grid-template-columns: 2fr 1fr 1fr 1fr;
			column-gap: 1rem;
		}
	}

	@media (min-width: 1200px) {
		.footer-container {
			column-gap: 2rem;
		}

		.footer-contact {
			padding-top: 7px;
		}

		.footer-contact li {
			justify-content: start;
			padding: 0 0 10px;
		}
	}
</style>
