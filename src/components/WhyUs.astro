<style>
    .why-us-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        height: auto;
    }

    .why-us-left {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }
    .why-spacer {
        padding-bottom: 20px;
    }

    .why-points-container {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
        line-height: .9rem;
    }

    .why-point-container {
        display: flex;
        align-items: flex-start;
    
    }

    .why-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        border: 2px solid var(--primary-darker);
        border-radius: 50%;
    }

    /* .why-icon img {
        height: 60px; 
        width: 60px; 
    } */
 
    .why-info-column {
        display: flex;
        flex-direction: column;
        margin-left: 10px;
    }

    .why-right-side {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        min-height: 370px;
        overflow: hidden;
    }
    .why-img {
        z-index: 1;
    }
    .why-img img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .why-blob {
        position: absolute;
        top: 0;
        left: 0;
        width: 95%;
        height: 95%;
        z-index: 0;
        transform: rotate(359deg);
    }
    .why-blob img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    @media (max-width: 576px) {
        .why-right-side {
            display: none;
        }
    }
    @media (min-width: 768px) {
        
        .why-us-container {
            flex-direction: row;
        }
        
        .why-us-left {
            width: 50%;
        }

        .why-right-side {
            display: flex;
            width: 50%;
            height: 100%; 
        }
    }

</style>
