---
// Import the Card component
import BlogCard from "./BlogCard.astro";
// Import the Card Props type
import type { Props as BlogCardProp } from "./BlogCard.astro";

// defined the Props for this component
type Props = {
  blogCards: BlogCardProp[]; // accepts an array of CardProps
};

const { blogCards } = Astro.props;
---

<div class="blog-cards">
  {/** Dynamically render multiple Card components */}
  {blogCards.map((card) => <BlogCard {...card} />)}
</div>

<style>
  .blog-cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Since this is standard CSS, we can have media queries here */
  @media screen and (min-width: 768px) {
    .cards {
      flex-direction: row;
    }
  }
</style>