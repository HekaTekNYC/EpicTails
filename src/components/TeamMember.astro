---
const { name, role, image, color } = Astro.props;
---
<div class="team-member-wrapper">
  <div class="team-member" style={{ backgroundColor: color }}>
    <img src={image} alt={name} class="team-member-image"/>
  </div>
  <h2>{name}</h2>
  <p>{role}</p>
  <div class="social-icons">
    <a href="https://www.facebook.com" aria-label="Facebook Icon"><img src="/icons/facebook.svg" alt="Facebook Icon" /></a>
    <a href="https://www.instagram.com" aria-label="Instagram Icon"><img src="/icons/instagram.svg" alt="Instagram Icon" /></a>
    <a href="https://www.x.com" aria-label="X Icon"><img src="/icons/x.svg" alt="X Icon" /></a>
  </div>
</div>

<style>
.team-member-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 1rem;
  text-align: center;
}
.team-member {
  background-color: white;
  border-radius: 50%;
  padding: 1rem;
  width: 150px;
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.team-member-image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.team-member h2 {
  margin-top: 1rem;
  font-size: 1.25rem;
}
.team-member p {
  margin: 0.5rem 0;
  font-size: 1rem;
  color: #777;
}
.social-icons {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin-top: 0.5rem;
}
.social-icons a {
  color: #555;
  text-decoration: none;
  font-size: 1.2rem;
}
.social-icons img {
  width: 24px;
  height: 24px;
}
</style>
