---
import type { ServiceData } from '../data/ServicesData'

const props = Astro.props as ServiceData
---

<div class="service-card-container">
	<div class="service-blobs">
		<img src="./images/service-blob.svg" alt="blue small blob" height="140" class="service-blob1" />
		<img
			src="./images/service-blob-2.svg"
			alt="blue small blob"
			height="140"
			class="service-blob2"
		/>
	</div>
	<div class="service-info">
		<div class="service-icon-container">
			<div class="service-icon">
				<img src={props.icon} alt={props.iconAlt} height="50" />
			</div>
		</div>
		<h4>{props.title}</h4>
		<p>{props.desc}</p>
		<div class="service-read-more">
			<div class="service-circle">
				<i class="fa-solid fa-arrow-right" style="color: #ffffff;"></i>
			</div>
			<h6>Read More</h6>
		</div>
	</div>
	<div class="service-paws">
		<img src="./images/paw-prints-4.png" alt="four paw prints in blue" height="150" />
	</div>
</div>

<style>
	.service-card-container {
		position: relative;
		display: flex;
		flex: 1;
		justify-content: center;
		align-items: center;
		height: 100%;
		width: 100%;
		max-width: 516px;
		padding: 25px;
		background: var(--white);
		border-radius: 20px;
		overflow: hidden;
		z-index: 1;
	}

	/* Service Card Blobs */
	.service-blobs {
		position: absolute;
		top: -10px;
		right: -10px;
		z-index: 2;
	}

	.service-blob1 {
		position: absolute;
		top: -15px;
		right: -15px;
		z-index: 3;
	}

	.service-blob2 {
		position: absolute;
		top: -5px;
		right: -5px;
		transform: scale(1.2);
		z-index: 2;
	}

	/* Service Card Info */
	.service-info {
		position: relative;
		z-index: 10;
	}

	.service-info h4 {
		margin-top: 15px;
		z-index: 10;
	}

	.service-icon-container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 90px;
		width: 90px;
		border-radius: 50px;
		background: var(--primary-dark);
	}

	.service-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
	}
	.service-icon img {
		height: 55px;
		width: 55px;
	}

	.service-read-more {
		display: flex;
		align-items: center;
	}

	.service-read-more h6 {
		color: var(--primary-darker);
	}

	.service-circle {
		display: flex;
		align-items: center;
		justify-content: start;
		background-color: var(--primary-dark);
		border-radius: 50px;
		border: none;
		width: 25px;
		height: 25px;
		margin-right: 8px;
	}

	/* Service card paw prints */
	.service-paws {
		position: absolute;
		bottom: 0;
		right: 40px;
		z-index: 2;
	}
	.service-paws img {
		transform: rotate(-40deg);
	}
</style>
