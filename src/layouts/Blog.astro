---
import Main from "./Main.astro";
import PostLayout from 'PostLa'

const { title, subtitle, ogImage, date } = Astro.props;
---

<Main title={title}>

  <!-- Hero Image -->
  {ogImage && (
    <figure class="figure">
      <img
        src={ogImage}
        alt={title}
        class="figure__image"
      />
    </figure>
  )}

  <!-- Blog Header -->
  <header class="blog-header">
    <h1>{title}</h1>
    <p class="blog-date">{new Date(date).toDateString()}</p>
    <h2>{subtitle}</h2>
  </header>

  <!-- Blog Content -->
  <article class="blog-content">
    <slot />
  </article>
</Main>

<style>
  main {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }

  .figure {
    margin: 0 auto 20px;
    text-align: center;
  }

  .figure__image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 10px;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #333;
  }

  .blog-date {
    font-size: 14px;
    color: #777;
    margin-bottom: 10px;
  }

  h2 {
    font-size: 1.5rem;
    color: #555;
    margin-bottom: 2rem;
  }

  .blog-content {
    line-height: 1.8;
    font-size: 18px;
    color: #333;
  }
</style>
