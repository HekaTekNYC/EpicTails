---
import TopBanner from '../components/TopBanner.astro'
import Footer from '../components/Footer.astro'
import NavigationBar from '../components/Navigation.astro'

import '../styles/global.css'

type Props = {
	title: string
}

const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/1c81f2c18f.js" crossorigin="anonymous"></script>

		<meta name="description" content="Epic Tails website" />
		<title>{title}</title>

		<link rel="stylesheet" href="https://use.typekit.net/ixi4ixd.css" />
	</head>
	<body>
		<main>
			<TopBanner />
			<NavigationBar />

			<div>
				<slot />
			</div>
			<Footer />
		</main>
	</body>
</html>
