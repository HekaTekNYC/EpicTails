---
const { title, date, thumbnail, color } = Astro.props;
---

<!-- <Main> -->
  <article class="blog-post">
    <header style={`border-color: ${color || "#333"}`}>
      <h1>{title}</h1>
      <p>{new Date(date).toLocaleDateString()}</p>
      {thumbnail && <img src={thumbnail} alt={title} />}
    </header>

    <slot />  <!-- This renders the blog content -->
  </article>
<!-- </Main> -->

<style>
.blog-post {
  max-width: 700px;
  margin: auto;
  padding: 20px;
  font-family: sans-serif;
}

.blog-post header {
  border-bottom: 4px solid;
  padding-bottom: 10px;
  margin-bottom: 20px;
}

.blog-post img {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
}
</style>
